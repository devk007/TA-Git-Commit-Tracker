# Server configuration
PORT=4000
MONGODB_URI=mongodb://localhost:27017/ta-commit-tracker

# Admin access token required for write operations
# ADMIN_TOKEN=change-me

# Optional: GitHub personal access token to increase rate limits
# GITHUB_TOKEN=ghp_your_token
# Optional: override GitHub API request timeout (milliseconds)
# GITHUB_TIMEOUT_MS=45000

# Optional: enable scheduled sync using node-cron (set to true or false)
ENABLE_AUTO_SYNC=false
SYNC_CRON=0 3 * * *
SYNC_WINDOW_DAYS=30
